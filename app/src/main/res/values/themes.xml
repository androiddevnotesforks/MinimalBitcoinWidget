<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BTCPriceWidget" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/negative_red</item>
        <item name="colorOnSecondary">@color/positive_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#7A7A7A</item>

        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/white</item>
        <item name="cardBackgroundColor">@color/card_day</item>
        <item name="textAppearanceBody1">@color/black</item>
        <item name="colorControlNormal">@color/black</item>

    </style>

    <style name="ThemeOverlay.BTCPriceWidget.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_widget</item>
        <item name="appWidgetTextColor">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="PreferenceScreen" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/black</item>
        <item name="android:colorAccent">@color/blue_500</item>
    </style>

</resources>