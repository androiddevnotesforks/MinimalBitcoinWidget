<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Data Information">

        <Preference
            app:summary="coingecko.com"
            app:title="Provided By CoinGecko">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://coingecko.com/" />

        </Preference>

    </PreferenceCategory>

    <PreferenceCategory app:title="App Information">

        <Preference
            app:summary="1.0"
            app:title="App Version" />

        <Preference
            app:summary="GNU General Public License v3.0"
            app:title="License" />

        <Preference
            app:summary="github.com/juliancoronado/MinimalBitcoinWidget"
            app:title="Source Code">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/juliancoronado/MinimalBitcoinWidget/" />

        </Preference>

    </PreferenceCategory>

    <PreferenceCategory app:title="Developer">

        <Preference
            app:summary="jcoronado.dev"
            app:title="Julian Coronado">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://jcoronado.dev/" />

        </Preference>

    </PreferenceCategory>

</PreferenceScreen>