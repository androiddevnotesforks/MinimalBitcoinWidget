<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:allowDividerBelow="true"
        app:title="Customization">

        <ListPreference
            app:defaultValue="Follow system theme"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:key="theme"
            app:title="Theme"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Price Source">

        <ListPreference
            app:defaultValue="CoinGecko"
            app:entries="@array/source_entries"
            app:entryValues="@array/source_values"
            app:key="source"
            app:title="Source"
            app:useSimpleSummaryProvider="true"

            />

    </PreferenceCategory>

</PreferenceScreen>