<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.BTCPriceWidget" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/teal_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="cardBackgroundColor">@color/card_night</item>
        <item name="textAppearanceBody1">@color/white</item>
        <item name="colorControlNormal">@color/white</item>

    </style>

    <style name="ThemeOverlay.BTCPriceWidget.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/dark_widget</item>
        <item name="appWidgetTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="PreferenceScreen" parent="Theme.AppCompat.DayNight">
        <item name="android:textColor">@color/white</item>
        <item name="android:colorAccent">@color/blue_500</item>
    </style>
</resources>